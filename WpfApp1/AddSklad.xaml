<Page x:Class="WpfApp1.AddSklad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSklad">

    <Grid>
        <StackPanel>
            <Label Opacity="{Binding CurrentSklad.num}" Background="Yellow" Content="Editing"/>

            <Label Content="Nomer Sklada"/>
            <TextBox Text="{Binding CurrentSklad.num}"/>
            <Label Content="Adress"/>
            <TextBox Text="{Binding CurrentSklad.adress}"/>
            <Label Content="Vid Materiala"/>
            <TextBox Text="{Binding CurrentSklad.vid}"/>
            <Label Content="Rasstoyanie"/>
            <TextBox Text="{Binding CurrentSklad.rast}"/>
            <Button x:Name="SaveButton" Content="Coxpanitb" Click="SaveButton_Click"/>
            <Button x:Name="SaveChanges" Content="Save Changes" Click="SaveChanges_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
